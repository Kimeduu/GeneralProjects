#include <stdio.h>

int main()
{
  float nota1,nota2,media;

  printf("enter your note1\n");
  scanf("%f", &nota1);
  
  printf("enter your note2\n");
  scanf("%f", &nota2);
  
  media =(nota1 + nota2)/2;
  
  printf("Media= %.1f\n",media);
  
  //.1 para ter só uma casa depois da vírgula  
  if (media<6)
  {
    printf("\nvoce foi reprovado\n");
  }
  else
  {
    printf("\nvocê foi aprovado\n");
  }
  return 0;
}
